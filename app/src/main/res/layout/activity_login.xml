<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/background"
    tools:context=".Activities.LoginActivity">

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/background_view_topleft"
            android:id="@+id/topView"/>
        <View
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/backgrounf_view_bottomright"
            android:layout_alignParentBottom="true"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/title"
            android:gravity="center"
            android:text="Quản Lí Kho Hàng"
            android:fontFamily="@font/sen"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/login"
            android:fontFamily="@font/indie_flower"
            android:gravity="center"
            android:text="CVA Management"
            android:textStyle="bold"
            android:textSize="27sp"
            android:id="@+id/title"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/card"
            android:gravity="center"
            android:text="LogIn"
            android:fontFamily="@font/b612_mono_bold_italic"
            android:textColor="#40487A"
            android:textSize="47sp"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="90dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:hint="Username :"
                    app:endIconMode="clear_text"
                    app:counterMaxLength="20"
                    app:counterEnabled="true"
                    app:helperText="Required*"
                    app:helperTextTextColor="#f20"
                    app:startIconDrawable="@drawable/baseline_person_24"
                    android:id="@+id/il_username">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="20"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:id="@+id/edUsername"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:hint="Password :"
                    app:endIconMode="password_toggle"
                    app:counterMaxLength="20"
                    app:counterEnabled="true"
                    app:helperText="Required*"
                    app:helperTextTextColor="#f20"
                    app:startIconDrawable="@drawable/baseline_key_24"
                    android:id="@+id/il_password_lg">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:id="@+id/edPassword_lg"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Login"
                        android:textColor="#007DDD"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="#2E2E2E"
                        android:id="@+id/btnLogin"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Exit"
                        android:textSize="18sp"
                        android:textColor="#CF0047"
                        android:textStyle="bold"
                        android:backgroundTint="#2E2E2E"
                        android:id="@+id/btnExit"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>